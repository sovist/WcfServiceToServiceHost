<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <targets>
    <target xsi:type="File" name="ExchangerService" fileName="${basedir}/Logs/ExchangerService/${shortdate}.log"
            layout="${longdate} ${uppercase:${level}} ${message} ${onexception:EXCEPTION OCCURRED\: ${exception:format=type, message, stacktrace:separator=*, method:maxInnerExceptionLevel=5:innerFormat=shortType, message, method}}" />
    <target name="console" xsi:type="Console" />
  </targets>

  <rules>
    <logger name="*" minlevel="Trace" writeTo="ExchangerService" />
    <logger name="*" minlevel="Info" writeTo="console" />
  </rules>
</nlog>